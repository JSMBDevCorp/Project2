<div class="card">
    <div class="card-content center-align">
        <img src="assets/images/logo-horizontal.png">
        <h4 class="white-text">LIMIT STOCKS</h4>

        {{!-- TABLE HEADER ROW --}}
        <div class="heading limit valign-wrapper">
            <div class="heading-logo-limit">
                LOGO
            </div>
            <div class="heading-symbol-limit">
                SYMBOL
            </div>
            <div class="heading-price-limit">
                PRICE
            </div>
            <div class="heading-arrow">
                BUY/SELL
            </div>
              <div class="heading-button">
                LIMITS
            </div>
            <div class="heading-button">
                UPDATE
            </div>
        </div>

        <!-- STOCK ITEM LIST-->
        <ul class="list-group ">
            {{#each stock}}
                <li>
                    <div class="stock limit valign-wrapper">
                        <div class="stockpic">
                            <img class="center-align" src="{{imageURL}}" alt="stockLogo">
                        </div>
                        <div class="stocksymbol">
                            {{symbol}}
                        </div>
                        <div class="stockprice" style="color:{{getColor changes}}">
                            {{price}}
                        </div>
                        <div class="stockarrow">
                            <img src="{{getArrow price sellPrice buyPrice}}">
                        </div>
                        <div class="limitprice">
                            {{buyPrice}} <br> {{sellPrice}}
                        </div>
                        <div class="stockbutton">
                            <button class="update btn-update" type="button" data-id="{{symbol}}"><i class="small material-icons">settings</i></button>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
        <!--ROUTE BUTTONS-->
        <div class="card-action center-align">
            <a href="/"><button type="button" class="btn btn-filter">View All</button></a>
            <a href="/api"><button type="button" class="btn btn-add">Add</button></a>
        </div>
    </div>
</div>

